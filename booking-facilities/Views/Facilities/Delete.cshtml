@model booking_facilities.Models.Facility
@{
    ViewData["Title"] = "Delete Facility";
}
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <strong class="card-title">Delete Facility</strong>
            </div>
            <div class="card-body">

                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.FacilityName)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.FacilityName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Venue)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Venue.VenueName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Sport)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Sport.SportName)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="FacilityId" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-info">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
