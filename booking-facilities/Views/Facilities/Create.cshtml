@model booking_facilities.Models.Facility
@{
    ViewData["Title"] = "Create Facility";
}
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Create Facility</strong>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FacilityName" class="control-label"></label>
                        <input asp-for="FacilityName" class="form-control" />
                        <span asp-validation-for="FacilityName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VenueId" class="control-label"></label>
                        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SportId" class="control-label"></label>
                        <select asp-for="SportId" class="form-control" asp-items="ViewBag.SportId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
