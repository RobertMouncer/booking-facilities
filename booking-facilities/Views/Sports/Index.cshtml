@model IEnumerable<booking_facilities.Models.Sport>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "Sports Index";
}
<div class="card">
    <div class="card-header">
        <strong class="card-title">Sports Index</strong> <a asp-action="Create" class="btn btn-sm btn-success">Create New</a>
    </div>
    <div class="table-stats order-table ov-h">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SportName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.onePageOfSports)
                {
                    <tr>
                        <td>
                            @item.SportName
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.SportId" class="btn btn-info btn-sm">Edit</a> 
                            <a asp-action="Delete" asp-route-id="@item.SportId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
