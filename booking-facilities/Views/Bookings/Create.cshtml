@model booking_facilities.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Facility.VenueId" class="control-label"></label>
                <select asp-for="Facility.VenueId" class="form-control" asp-items="ViewBag.VenueId" onchange="updateSports()" id="venueDDL"></select>
            </div>
            <div class="form-group">
                <label asp-for="Facility.SportId" class="control-label"></label>
                <select asp-for="Facility.SportId" class="form-control" asp-items="ViewBag.SportId" id="sportDDL"></select>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" type="date" id="BookingDate"/>
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="input-group">
                <input type="button" onclick="getTimes()" value="Get times" class="form-control" />
            </div>

            <div class="form-group" id="BookingTimeId">
                <label asp-for="BookingTime" class="control-label"></label>
                <select asp-for="BookingTime" class="form-control" asp-items="ViewBag.BookingTime" id="BookingTimeDDL" disabled ></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" disabled id="submitButton"/>
            </div>
        </form>
    </div>
</div>

