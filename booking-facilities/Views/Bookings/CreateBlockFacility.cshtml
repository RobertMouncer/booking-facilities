@model booking_facilities.Models.Booking
@{
    ViewData["Title"] = "Block A Facility";
}
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Create Facility Block</strong>
            </div>
            <div class="card-body">
                <form asp-action="CreateBlockFacility">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Facility.VenueId, new { @class = "control-label" })
                        @Html.DropDownList("VenueId", (IEnumerable<SelectListItem>)ViewBag.VenueId, new { @id = "venueDDL", @class = "form-control", @onchange = "updateSports()" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Facility.SportId, new { @class = "control-label" })
                        @Html.DropDownList("SportId", (IEnumerable<SelectListItem>)ViewBag.SportId, new { @id = "sportDDL", @class = "form-control", @onchange = "updateFacilities()" })
                    </div>
                    <div class="form-group">
                        <label asp-for="FacilityId" class="control-label"></label>
                        <select asp-for="FacilityId" class="form-control" asp-items="ViewBag.FacilityId" id="facilityDDL"></select>
                        <span asp-validation-for="FacilityId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="BookingDateId" class="control-label">Booking Date</label>
                        <input class="form-control" type="date" id="BookingDateId" onchange="updateDateTime()" />
                    </div>
                    <div class="form-group">
                        <label for="timeDDL" class="control-label">Booking Time</label>
                        <select class="form-control" id="timeDDL" onchange="updateDateTime()"></select>
                    </div>
                    <div class="form-group" id="BookingTimeForm">
                        <label asp-for="BookingDateTime" class="control-label"></label>
                        <input asp-for="BookingDateTime" class="form-control" asp-items="ViewBag.BookingDateTime" id="BookingDateTime" readonly="readonly" />
                        <span asp-validation-for="BookingDateTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="EndBookingDateId" class="control-label">End Booking Date</label>
                        <input class="form-control" type="date" id="EndBookingDateId" onchange="updateDateTime()" />
                    </div>
                    <div class="form-group">
                        <label for="endTimeDDL" class="control-label">End Booking Time</label>
                        <select class="form-control" id="endTimeDDL" onchange="updateDateTime()"></select>
                    </div>
                    <div class="form-group" id="BookingTimeForm">
                        <label asp-for="EndBookingDateTime" class="control-label"></label>
                        <input asp-for="EndBookingDateTime" class="form-control" asp-items="ViewBag.EndBookingDateTime" id="EndBookingDateTime" readonly="readonly" />
                        <span asp-validation-for="EndBookingDateTime" class="text-danger"></span>
                    </div>
                    <p>Blocking a facility will remove all bookings made during the blocking period.</p>
                    <div class="form-group">
                        <input type="submit" value="Create Facility Block" class="btn btn-default" id="submitButton" />
                    </div>
                </form>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>





        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            <script>
        function updateDateTime() {
            document.getElementById("EndBookingDateTime").value = document.getElementById("EndBookingDateId").value + "T" + jQuery("#endTimeDDL :selected").text();
            document.getElementById("BookingDateTime").value = document.getElementById("BookingDateId").value  + "T" + jQuery("#timeDDL :selected").text();
        }

        function updateSports() {
            urlVenues = '@Url.Content("~/")' + "api/Sports/getSportsByVenue/"  + jQuery("#venueDDL").val();

            jQuery.ajax({
                url: urlVenues,
                success: function (json) {

                    var items = "";
                    jQuery.each(json, function (i, sport) {
                        items += "<option value='" + sport.sportId + "'>" + sport.sportName + "</option>";
                    })
                    jQuery("#sportDDL").empty().html(items);
                    updateFacilities();
                }
            });
        }

        function updateFacilities() {
            urlFacilities = '@Url.Content("~/")' + "api/Facilities/" + jQuery("#venueDDL").val() + "/" + jQuery("#sportDDL").val();
            jQuery.ajax({
                url: urlFacilities,
                success: function (json) {

                    var items = "";
                    jQuery.each(json, function (i, facility) {
                        items += "<option value='" + facility.facilityId + "'>" + facility.facilityName + "</option>";
                    })
                    jQuery("#facilityDDL").empty().html(items);

                }
            });
        }

        function populateTimes() {

            var startTime = 9;
            var hoursOpen = 12;

            var startTimes = "";
            var endTimes = "";

            for (i = 0; i < hoursOpen; i++) {

                startTimes += "<option value='" + i + "'>" + ("0" + (i + startTime)).slice(-2) + ":00:00" + "</option>";
                endTimes += "<option value='" + i + "'>" + ("0" + (i + startTime + 1)).slice(-2) + ":00:00" + "</option>";
            }
            jQuery("#timeDDL").empty().html(startTimes);
            jQuery("#endTimeDDL").empty().html(endTimes);

        }
        updateSports();
        updateFacilities();
        populateTimes();
            </script>
        }
